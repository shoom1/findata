# Include documentation
include README.md
include LICENSE
include CLAUDE.md
include CHANGELOG.md
include QUICK_START_INDEX_DATA.md
include QUICKSTART_*.md
include DASHBOARD.md

# Include configuration files
include environment.yml
include requirements.txt
include pyproject.toml

# Include data files
recursive-include data *.json
recursive-include data/index_configs *.json

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store

# Exclude build artifacts
global-exclude *.egg-info
exclude findata.egg-info
exclude src/findata.egg-info

# Exclude database and cache files
exclude data/timeseries.db
exclude .pytest_cache
